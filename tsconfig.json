{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2022",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "lib"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
